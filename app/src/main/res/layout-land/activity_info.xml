<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="576dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            tools:text="title"
            android:textColor="@color/Blue"
            android:textSize="25dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/iv_poster"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rating"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginTop="124dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintLeft_toRightOf="@+id/iv_poster"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="date"
            android:textColor="@color/white"

            android:textSize="40dp"
            android:layout_marginRight="14dp"
            android:id="@+id/tv_release_date"
            app:layout_constraintRight_toRightOf="@+id/tv_rating"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_overview" />

        <ImageButton
            android:id="@+id/imageButton_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_rating"
            app:layout_constraintBottom_toBottomOf="@+id/tv_release_date"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="39dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.514"
            android:layout_marginEnd="39dp" />
        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="576dp"
            android:layout_height="wrap_content"
            tools:text="overview"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_poster" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview_trailer"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_overview"
            android:layout_marginStart="8dp"></android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:layout_width="576dp"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview_reviews"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerview_trailer"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"></android.support.v7.widget.RecyclerView>


    </android.support.constraint.ConstraintLayout>
</ScrollView>